
html, body 
  // 默认背景
  background $color-background
  // 默认字体颜色
  color $color-text-1
  // 默认字体大小
  font-size $font-size-normal
  font-family "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
  // overflow hidden
  margin 0

input, textarea, [contenteditable="true"]
  // 去除输入框内的长按选择
  user-select auto !important

a
  text-decoration none
  background-color transparent
  cursor pointer

p
  word-break break-all
  margin 0

ul
  margin 0
  padding 0
  li
    list-style none

// 去除input[type="number"]的上下箭头按钮
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
  -webkit-appearance none
input[type="number"]
  -moz-appearance: textfield

// 正常滚动
.scroll-box
  height 100%
  overflow-x hidden
  overflow-y auto
  -webkit-overflow-scrolling touch
  -webkit-box-sizing border-box
.scroll-box::-webkit-scrollbar
  display none
  height 0
  width 0
// 横向滚动
.scroll-box-x
  width 100vw
  overflow-x auto
  overflow-y hidden
  -webkit-overflow-scrolling touch
  -webkit-box-sizing border-box

// 去掉滚动条
.no-scrollbar::-webkit-scrollbar
  display none
  height 0
  width 0

// 清除浮动
.clearfix
  &:after
    content ""
    display block
    clear both

// 字体颜色
.color-primary
  color $color-primary
.color-primary-dark
  color $color-primary-dark
.color-success
  color $color-success
.color-warning
  color $color-warning
.color-danger
  color red // $color-danger
.color-info
  color $color-info

// 背景颜色
.bg-primary
  background-color rgba($color-primary, 0.25)
.bg-primary-dark
  background-color rgba($color-primary-dark, 0.25)
.bg-success
  background-color rgba($color-success, 0.25)
.bg-warning
  background-color rgba($color-warning, 0.25)
.bg-danger
  background-color rgba($color-danger, 0.25)
.bg-info
  background-color rgba($color-info, 0.25)

// 各种状态
.disabled
  color $color-info
  cursor not-allowed
.link
  color $color-primary
  cursor pointer

[v-cloak]
  display none

// 底部分页组件
.bottom-pagination
  text-align left
  margin-top 16px

// 使用协议弹窗
.plicy-dialog
  .el-dialog__header, .el-dialog__footer
    padding 12px
  .el-dialog__body
    padding 0 20px

// 搜索栏样式
.query-form
  background #ffffff
  margin-bottom 12px
  padding 12px 16px
  &:after
    content ""
    display block
    clear both
  .input-with-select
    width 260px
    .el-input-group__prepend
      background-color #ffffff
      width 48px
      color $color-primary
      padding 0 16px
    .el-input-group__append
      background-color $color-primary
      color #ffffff
    &.el-input--small .el-input__inner
      line-height: 33px
  >span
    padding 5px 0
    display inline-block
  .left-form
    display flex
    align-items: center
  .right-btns
    float right
  .el-radio-group
    margin 0 20px
    .el-radio
      margin 0
      &+.el-radio
        margin-left 12px
    .el-radio__label
      padding-left 6px
.query-select-list
  margin-top 12px

